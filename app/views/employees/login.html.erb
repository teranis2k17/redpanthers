<% provide(:title, "Log in") %>
<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:employee) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control btn2' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control btn2' %>

      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn1" %>
    <% end %>

  </div>
</div>